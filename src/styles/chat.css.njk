.chat-container {
  max-width: 600px;
  margin: 2rem auto;
  border: 1px solid #ccc;
  border-radius: 8px;
  padding: 1rem;
  font-family: 'Times New Roman', sans-serif;
}

.chat-box {
  height: 300px;
  overflow-y: auto;
  border: 1px solid #eee;
  padding: 1rem;
  margin-bottom: 1rem;
  background: #fafafa;
}

.chat-message {
  margin-bottom: 1rem;
  padding: 0.5rem;
  border-radius: 5px;
}

.chat-message.user {
  background: #e0f7fa;
  text-align: right;
}

.chat-message.bot {
  background: #f1f8e9;
  text-align: left;
}

#chat-form {
  display: flex;
  gap: 0.5rem;
}

#chat-input {
  flex: 1;
  padding: 0.5rem;
  font-size: 1rem;
}

button {
  padding: 0.5rem 1rem;
  font-size: 1rem;
}